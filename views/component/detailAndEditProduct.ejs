                    <textarea id="productBenefitsUpdate4_en" rows="1" placeholder="Nhập Công Dụng Tiếng Anh..." ></textarea>
                    <textarea id="productBenefitsUpdate5_en" rows="1" placeholder="Nhập Công Dụng Tiếng Anh..." ></textarea>
                </div>
            </form>
        </div>
        <div class="col-lg-4 p-3">
            <form id="formUpdateProduct3">
                <div>
                    <label for="productName">Tên Sản Phẩm:</label>
                    <input type="text" id="productNameUpdate_zh" required placeholder="Tên Tiếng Trung...">
                </div>
                
                <div>
                    <label for="productDescription">Mô Tả (Tối đa 500 chữ):</label>
                    <textarea id="productDescriptionUpdate_zh" maxlength="500" required placeholder="Mô Tả Tiếng Trung"></textarea>
                </div>
        
