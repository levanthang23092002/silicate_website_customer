                    <textarea id="productBenefitsUpdate5_zh" rows="1" placeholder="Nhập Công Dụng Tiếng Trung..." required></textarea>
                </div>     
            </form>
        </div>
    </div>
    <div class="btn-sumit-add">
        <button type="submit" class="btn" id="GoBackBtn">Quay lại</button>
        <button type="submit" class="btn" id="UpdateProductBtn">Cập nhật sản phẩm</button>
        <button type="submit" class="btn" id="DeleteProductBtn">Xóa Sản Phẩm </button>

    </div>
