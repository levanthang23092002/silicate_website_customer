                    <textarea id="productBenefitsUpdate4_vi" rows="1" placeholder="Nhập Công Dụng Tiếng Việt..." required></textarea>
                    <textarea id="productBenefitsUpdate5_vi" rows="1" placeholder="Nhập Công Dụng Tiếng Việt..." required></textarea>
                </div>
                <div class="col-12">
                    <label for="productImageUpdate">Hình Ảnh:</label>
                    <input type="file" id="productImageUpdate" accept="image/*" >
                    <br>
                    <img id="imageDetailPreview" src="" alt="abc" >
                </div>
            </form>
        </div>
        <div class="col-lg-4 p-3">
            <form id="formUpdateProduct2">
                <div>
                    <label for="productName">Tên Sản Phẩm:</label>
                    <input type="text" id="productNameUpdate_en" required placeholder="Tên Tiếng Anh">
                </div>
                <div>
                    <label for="productDescriptionUpdate">Mô Tả (Tối đa 500 chữ):</label>
